{
  "name": "faveslist",
  "productName": "Faveslist",
  "description": "Spotify faveslist helper, for Mac",
  "version": "0.0.1",
  "private": true,
  "author": "Adrian Cousens <a@thisadrian.com>",
  "copyright": "Â© 2020, Adrian Cousens",
  "homepage": "https://faveslist.thisadrian.com",
  "main": "app/background.js",
  "build": {
    "appId": "com.faveslist",
    "files": [
      "app/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "resources"
    },
    "protocols": {
      "name": "faveslist",
      "schemes": [
        "faveslist"
      ]
    },
    "mac": {
      "extendInfo": {
        "LSUIElement": 1
      }
    },
    "publish": null
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "preunit": "webpack --config=build/webpack.unit.config.js --env=test --display=none",
    "unit": "electron-mocha temp/specs.js --renderer --require source-map-support/register",
    "pree2e": "webpack --config=build/webpack.app.config.js --env=test --display=none && webpack --config=build/webpack.e2e.config.js --env=test --display=none",
    "e2e": "mocha temp/e2e.js --require source-map-support/register",
    "test": "npm run unit && npm run e2e",
    "start": "node build/start.js",
    "release": "webpack --config=build/webpack.app.config.js --env=production && electron-builder"
  },
  "dependencies": {
    "electron-store": "^5.1.1",
    "fs-jetpack": "^2.1.0",
    "preact": "^10.4.2",
    "axios": "^0.19.2",
    "qs": "^6.9.4"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-transform-react-jsx": "^7.9.4",
    "@babel/preset-env": "^7.5.5",
    "autoprefixer": "^9.8.0",
    "babel-loader": "^8.0.0-beta.4",
    "chai": "^4.1.0",
    "css-loader": "^3.1.0",
    "electron": "18.3.7",
    "electron-builder": "^22.5.1",
    "electron-mocha": "^8.1.1",
    "file-loader": "^6.0.0",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "mocha": "^7.1.1",
    "postcss": "^7.0.30",
    "source-map-support": "^0.5.6",
    "spectron": "^10.0.1",
    "style-loader": "^1.1.4",
    "tailwindcss": "^1.4.6",
    "webpack": "^4.38.0",
    "webpack-cli": "^3.3.6",
    "webpack-merge": "^4.1.3",
    "webpack-node-externals": "^1.7.2"
  }
}
